class Solution {
public:
    int carFleet(int target, vector<int>& position, vector<int>& speed) {
        // we have to start from the position that is closest to the target.
        // this is because the speeds of the other cars may change, but this one will never change
        // need to merge the speed and position vectors so that sorting follows
        vector<pair<int,int>> cars;
        for (int i=0; i<position.size(); ++i){
            cars.push_back({position[i], speed[i]});
        }
        sort(position.rbegin(), position.rend()); // sorts by position in pair<int,int>
        stack<double> s;
        for (int i=0; i<cars.size(); ++i){
            // position + v*t = new_position --> solve for time reached target
            time = (target - cars[i].first) / cars[i].second;
        }
        return s.size();
    }
};
